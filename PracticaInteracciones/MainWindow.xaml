<?xml version="1.0" encoding="DOS-720"?>
<Window x:Class="PracticaInteracciones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaInteracciones"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBlock Height="100" Width="100">Cuenta:</TextBlock>
        <TextBox Name="txtCuenta" Canvas.Top="20" Height="30" Width="400"></TextBox>
        <Slider ValueChanged="sldPorcentajePropina_ValueChanged" Name="sldPorcentajePropina" Canvas.Top="70" Height="50" Width="500"></Slider>
        <TextBlock x:Name="ldlPorcentajePropina1" Canvas.Top="70" Canvas.Right="250">0%</TextBlock>
        <TextBlock  Height="100" Width="100" Canvas.Top="105">Total con Propina:</TextBlock>
        <TextBlock Name="lblTotallPropina" Height="100" Width="100" Canvas.Top="125">$0.00</TextBlock>
    </Canvas>
</Window>
